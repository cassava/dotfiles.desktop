! This keyboard mapping modifies the US keyboard layout to add some international
! keys as well as a few other niceties.

! Number and symbol row
keycode  49 = grave asciitilde grave asciitilde                 dead_tilde
keycode  10 = 1 exclam 1 exclam                                 U2605
keycode  11 = 2 at 2 at                                         U2713
keycode  12 = 3 numbersign 3 numbersign                         U2717
keycode  13 = 4 dollar 4 dollar                                 sterling
keycode  14 = 5 percent 5 percent                               EuroSign
keycode  15 = 6 asciicircum 6 asciicircum                       notsign
keycode  16 = 7 ampersand 7 ampersand                           U00F7
keycode  17 = 8 asterisk 8 asterisk                             multiply U2219
keycode  18 = 9 parenleft 9 parenleft                           U2264
keycode  19 = 0 parenright 0 parenright                         U2265
keycode  20 = minus underscore minus underscore                 endash emdash
keycode  21 = equal plus equal plus                             U2254 U2295

! Top row
keycode  24 = q Q q Q                                           U201A U201E
keycode  25 = w W w W                                           leftsinglequotemark leftdoublequotemark
keycode  26 = e E e E                                           rightsinglequotemark rightdoublequotemark
keycode  27 = r R r R
keycode  28 = t T t T
keycode  29 = y Y y Y
keycode  30 = u U u U                                           udiaeresis Udiaeresis
keycode  31 = i I i I
keycode  32 = o O o O                                           odiaeresis Odiaeresis
keycode  33 = p P p P
keycode  34 = bracketleft braceleft bracketleft braceleft       U2039 guillemotleft
keycode  35 = bracketright braceright bracketright braceright   U203A guillemotright
keycode  51 = backslash bar backslash bar

! Middle row
keycode  38 = a A a A                                           adiaeresis Adiaeresis
keycode  39 = s S s S                                           ssharp
keycode  40 = d D d D
keycode  41 = f F f F
keycode  42 = g G g G
keycode  43 = h H h H
keycode  44 = j J j J
keycode  45 = k K k K                                           dead_abovering
keycode  46 = l L l L
keycode  47 = semicolon colon semicolon colon                   dead_diaeresis
keycode  48 = apostrophe quotedbl apostrophe quotedbl           dead_circumflex

! Bottom row
keycode  52 = z Z z Z
keycode  53 = x X x X
keycode  54 = c C c C                                           dead_cedilla
keycode  55 = v V v V                                           U2190 U21D0
keycode  56 = b B b B                                           U2194 U21D4
keycode  57 = n N n N                                           U2192 U21D2
keycode  58 = m M m M
keycode  59 = comma less comma less                             dead_grave
keycode  60 = period greater period greater                     dead_abovedot
keycode  61 = slash question slash question                     dead_acute

! Map CapsLock to Escape
keycode   9 = Escape NoSymbol Escape
keycode  65 = space NoSymbol space
keycode  66 = Escape NoSymbol Escape
